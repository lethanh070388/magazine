mixin tab-item(id='A',active='false')
    if active == 'true'
        .container.tab-pane.active.p-0(id="tab"+(id))
            .row.no-gutters
                .col
                    if block
                        block
    else
        .container.tab-pane.p-0(id="tab"+(id))
            .row.no-gutters
                .col
